@model Food
@{
    ViewData["Title"] = "AddFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddFood</h1>

<hr />

<form method="post" asp-controller="Food" asp-action="AddFood">
    <div class="form-group">
        <label asp-for="FName"> <b>Food Name</b></label>
        <input asp-for="FName" class="form-control" />
        <span asp-validation-for="FName" class="text-danger"></span>

    </div>


    @Html.Label("Category")
   @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.category,new { @class="form-control"})
    <br />

    <div class="form-group">
        <label asp-for="FStock"><b>Stock</b> </label>
        <input asp-for="FStock" class="form-control"/>
        <span asp-validation-for="FName" class="text-info"></span>

    </div>

    <div class="form-group">
        <label asp-for="FPrice"><b>Price</b> </label>
        <input asp-for="FPrice" class="form-control"/>
        <span asp-validation-for="FPrice" class="text-info"></span>

    </div>
    <div class="form-group">
        <label asp-for="FImageUrl"><b>Image</b> </label>
        <input asp-for="FImageUrl" class="form-control"/>
        <span asp-validation-for="FImageUrl" class="text-info"></span>

    </div>
    <div class="form-group">
        <label asp-for="FDescription"><b>Description</b> </label>
        <textarea asp-for="FDescription" class="form-control"></textarea>
        <span asp-validation-for="FDescription" class="text-info"></span>

    </div>
  


        

    <button type="submit" href="/Food/Index/" class="btn btn-outline-primary"><b>Sumbit</b></button>
</form>

