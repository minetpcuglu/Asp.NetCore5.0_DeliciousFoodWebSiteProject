@model List<Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>
<br />
<table class="table table-striped  table-hover table-bordered">
    <tr>
        <th>ID</th>
        <th>Food Name</th>
        <th>Category Name</th>
        <th>Image</th>

        <th style="width:240px">Update / Delete / Detail</th>
    </tr>

    @foreach (var food in Model)
    {
        <tr>
            <th>@food.FoodId</th>
            <td>@food.FName</td>

            <td>
              @food.Category.CName
            </td>

            <td>@food.FImageUrl</td>

            <td>
                <a href="/Food/DeleteFood/@food.FoodId" class="btn btn-danger">Delete</a>
                <a href="/Food/FoodUpdate/@food.FoodId" class="btn btn-success">Update</a>
                <a href="#" class="btn btn-info">Detail</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Food/AddFood/" class="btn btn-primary">Add New Food</a>